##Compton configuration file

## Shadows
shadow = false;
no-dnd-shadow = true;
no-dock-shadow = true;
clear-shadow = true;
shadow-radius = 32;
shadow-offset-x = -32;
shadow-offset-y = -32;
shadow-opacity = 0.5;
shadow-exclude = [
  "bounding_shaped",
  "class_g = 'rofi'",
  "class_g = 'i3-frame'",
  "class_g = 'vscodium'",
  "name = 'bar'",
  "name = 'rofi'",
  "_GTK_FRAME_EXTENTS@:c"
];

## Fading
fading = true;
fade-delta = 0.25;
fade-in-step = 0.02;
fade-out-step = 0.02;
fade-exclude = [
];

## Opacity
active-opacity = 1.0;
frame-opacity = 0.7;
opacity-rule = [
  "60:class_g= 'i3bar'",
  "80:class_g= 'File-roller'",
  "70:class_g= 'kitty'",
  "93:class_g= 'Firefox'",
  "70:class_g= 'Spotify'",
  "75:class_g= 'VSCodium'",
  "80:class_g= 'Joplin'",
  "80:class_g = 'Org.gnome.Nautilus'",
  "80:class_g = 'Org.gnome.gedit'"
];

## other
backend = "glx";
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
detect-client-opacity = true;
refresh-rate = 0;
vsync = "none";
dbe = false;
paint-on-overlay = true;
focus-exclude = [
];
detect-transient = true;
detect-client-leader = true;
invert-color-include = [ ];
glx-copy-from-front = false;
glx-swap-method = "undefined";
wintypes: {
    tooltip = {
      fade = true;
      shadow = true;
      opacity = 0.75;
      focus = true;
    };
};

## blur
blur-background = true;
blur-background-frame = true;
blur-background-fixed = false;
blur-kern = "3x3box";
blur-method = "kawase";
blur-strength = 12;
#blur-background-exclude = [ "window_type = 'dock'", "window_type = 'desktop'" ];

