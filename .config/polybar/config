;===============================================================
; colors
;===============================================================
[colors]
background = #0c0c0d
foreground = #cea29e
primary = #8c504b
secondary = #584040
alert = #90716e
color1 = #554344
color2 = #704947

;===============================================================
; bar settings
;===============================================================
[bar/mybar]
width = 100%
height = 28
offset-x = 0
offset-y = 0
;locale = it_IT.UTF-8
locale = en_US.UTF-8

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 3
;underline-color = ${colors.primary}

border-bottom-size = 1
border-bottom-color = ${colors.background}
border-top-size = 1
border-top-color = ${colors.background}

padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = "Misc Ohsnap:pixelsize=12;0"
font-1 = unifont:pixelsize=9:Tewi:fontformat=truetype;0
font-2 = "Font Awesome 5 Free Solid:pixelsize=8;0"

modules-left = i3
modules-center = date
modules-right = volume temperature cpu memory eth time powermenu

tray-position = right
tray-padding = 2
tray-background = ${colors.background}


;===============================================================
; global wm settings
;===============================================================
[global/wm]
margin-top = 0
margin-bottom = 0


;===============================================================
; modules
;===============================================================
[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
enable-scroll = false

label-focused = %name%
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1
label-focused-underline = ${colors.foreground}

label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.secondary}

label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

label-visible = %name%
label-visible-padding = 1


[module/cpu]
type = internal/cpu
interval = 1.0
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage%%


[module/memory]
type = internal/memory
interval = 1.0
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %percentage_used%%


[module/temperature]
type = internal/temperature
interval = 1.0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon0/temp2_input
warn-temperature = 60

format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}


[module/eth]
type = internal/network
interface = enp0s25
interval = 3.0

label-connected = %{F#8C504B} %{F-}eth
;label-connected-foreground = ${colors.primary}

label-disconnected = "[!] eth off"
label-disconnected-foreground = ${colors.alert}


[module/netstat]
type = internal/network
interface = enp0s25
interval = 3.0
label-connected = %{F#8C504B} %{F-}%downspeed% %{F#4A3535} %{F-}%upspeed%


[module/date]
type = internal/date
;interval = 1.0
date = %a %d %b %Y
label = %date%
label-foreground = ${colors.foreground}


[module/time]
type = internal/date
interval = 1.0
time = %H:%M:%S
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %time%
label-foreground = ${colors.foreground}


[module/powermenu]
type = custom/menu
format-spacing = 1

label-open = 
label-open-foreground = ${colors.primary}
label-close =  undo
label-close-foreground = ${colors.primary}
label-separator = |
label-separator-foreground = ${colors.secondary}

menu-0-0 = lock
menu-0-0-exec = xscreensaver-command -lock
menu-0-1 = reboot
menu-0-1-exec = reboot
menu-0-2 = poweroff
menu-0-2-exec = poweroff


[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume-foreground = ${colors.primary}
label-volume = ""
label-muted = "mute"
label-muted-foreground = "${colors.alert}"

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.primary}
bar-volume-foreground-1 = ${colors.primary}
bar-volume-foreground-2 = ${colors.primary}
bar-volume-foreground-3 = ${colors.primary}
bar-volume-foreground-4 = ${colors.primary}
bar-volume-foreground-5 = ${colors.primary}
bar-volume-foreground-6 = ${colors.primary}
bar-volume-foreground-7 = ${colors.primary}
bar-volume-foreground-8 = ${colors.primary}
bar-volume-foreground-9 = ${colors.alert}

bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
