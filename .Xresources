!! xscreensaver

xscreensaver.splash: false

!font settings
xscreensaver.Dialog.headingFont:        -*-terminus-bold-r-*-*-16-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-terminus-medium-r-*-*-16-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-terminus-bold-r-*-*-16-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-terminus-bold-r-*-*-16-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-terminus-medium-r-*-*-12-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-terminus-bold-r-*-*-16-*-*-*-*-*-*-*

!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #ECEFF1
xscreensaver.Dialog.background:         #3E515A
xscreensaver.Dialog.topShadowColor:     #2A373E
xscreensaver.Dialog.bottomShadowColor:  #2A373E
xscreensaver.Dialog.Button.foreground:  #ECEFF1
xscreensaver.Dialog.Button.background:  #00BCD4

!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #ECEFF1
xscreensaver.Dialog.text.background:    #2A373E
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2

!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #00BCD4
xscreensaver.passwd.thermometer.background:  #00BCD4
xscreensaver.passwd.thermometer.width:       8

!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %H:%M - %a %b %d, %Y
