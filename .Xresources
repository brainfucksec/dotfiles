!{{{ Xscreensaver

xscreensaver.splash: false

!font settings
xscreensaver.Dialog.headingFont:        -*-terminus-bold-r-*-*-18-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-terminus-medium-r-*-*-18-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-terminus-medium-r-*-*-18-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-terminus-medium-r-*-*-18-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-terminus-bold-r-*-*-18-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-terminus-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-terminus-bold-r-*-*-18-*-*-*-*-*-*-*

!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #DDDDEE
xscreensaver.Dialog.background:         #1E2E3B
xscreensaver.Dialog.topShadowColor:     #141C27
xscreensaver.Dialog.bottomShadowColor:  #141C27
xscreensaver.Dialog.Button.foreground:  #DDDDEE
xscreensaver.Dialog.Button.background:  #141C27

!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #DDDDEE
xscreensaver.Dialog.text.background:    #141C27
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2

!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #141C27
xscreensaver.passwd.thermometer.background:  #141C27
xscreensaver.passwd.thermometer.width:       0

!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %Y-%m-%d  %R
!}}}


!{{{ X11 Cursor
Xcursor.theme: Breeze-Adapta
Xcursor.size: 16
!}}}
