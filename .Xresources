!{{{ Fonts settings (Applications without fontconfig support)
!Xft.dpi: 96
!Xft.autohint: 0
!Xft.lcdfilter: lcddefault
!Xft.hintstyle: hintslight
!Xft.hinting: 1
!Xft.antialias: 1
!Xft.rgba: rgb
!}}}


!{{{ Xscreensaver

xscreensaver.splash: false

!font settings
xscreensaver.Dialog.headingFont:        -*-fixed-medium-r-*-*-20-*-*-*-*-*-*-*
xscreensaver.Dialog.bodyFont:           -*-fixed-medium-r-*-*-20-*-*-*-*-*-*-*
xscreensaver.Dialog.labelFont:          -*-fixed-medium-r-*-*-20-*-*-*-*-*-*-*
xscreensaver.Dialog.unameFont:          -*-fixed-medium-r-*-*-20-*-*-*-*-*-*-*
xscreensaver.Dialog.buttonFont:         -*-fixed-medium-r-*-*-20-*-*-*-*-*-*-*
xscreensaver.Dialog.dateFont:           -*-fixed-medium-r-*-*-14-*-*-*-*-*-*-*
xscreensaver.passwd.passwdFont:         -*-fixed-medium-r-*-*-20-*-*-*-*-*-*-*

!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #ddddee
xscreensaver.Dialog.background:         #1b2a36
xscreensaver.Dialog.topShadowColor:     #0f171d
xscreensaver.Dialog.bottomShadowColor:  #0f171d
xscreensaver.Dialog.Button.foreground:  #ddddee
xscreensaver.Dialog.Button.background:  #0f171d

!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #ddddee
xscreensaver.Dialog.text.background:    #0f171d
xscreensaver.Dialog.internalBorderWidth:24
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2

!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #0f171d
xscreensaver.passwd.thermometer.background:  #0f171d
xscreensaver.passwd.thermometer.width:       0

!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %Y-%m-%d  %R
!}}}


!{{{ X11 Cursor
Xcursor.theme: Breeze-Blue
Xcursor.size: 16
!}}}
