--[[
.conkyrc - conky configuration file
Version: 0.27
Description: Configuration file for display minimal, one line, conky
Author: Brainfuck
Dependencies: Ohsnap fonts
]]

-- Settings
-----------
conky.config = {
	double_buffer = true,
	background = true,
	own_window = true,
	own_window_transparent = true,
	own_window_type = 'desktop',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	draw_borders = false,
	border_outer_margin = 2,
	draw_outline = false,
	draw_shades = false,
	default_shade_color = '#000000',
	gap_y = 0,
	gap_x = 0,
	alignment = 'top_middle',
	update_interval = 3,
	use_xft = true,
	font = 'misc ohsnap:size=9',
	use_spacer = 'none',
	short_units = true,
	color1 = '#b0bec5',
    color2 = '#efefef'
}

-- Output
---------
conky.text = [[
${color1}Kernel: ${color2}$kernel | \
${color1}CPU1: ${color2}${cpu cpu1}% \
${color1}CPU2: ${color2}${cpu cpu2}% | \
${color1}Ram: ${color2}${memperc}% | \
${color1}Swap: ${color2}${swapperc}% | \
${color1}HDD: ${color1}used ${color2}${fs_used /} ${color1}tot ${color2}${fs_size /} | \
${color1}Net: Down ${color2}${downspeed enp0s25} ${color1}Up ${color2}${upspeed enp0s25} | \
${color1}Uptime: ${color2}${uptime} | \
${color1}Top: ${color2}${top name 1}${top cpu 1}${top mem 1}
]]
